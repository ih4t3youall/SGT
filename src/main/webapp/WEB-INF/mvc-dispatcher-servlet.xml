<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:context="http://www.springframework.org/schema/context"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="
 http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
 http://www.springframework.org/schema/context
 http://www.springframework.org/schema/context/spring-context-4.0.xsd">

 <context:component-scan base-package="ar.com.sgt.controllers" />

 <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
 <property name="prefix">
   <value>/WEB-INF/jsp/</value>
 </property>
 <property name="suffix">
    <value>.jsp</value>
 </property>
 
 </bean>
 
<!--   <bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close"> -->
<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
    <property name="url" value="jdbc:mysql://localhost:3306/sgt"/>
    <property name="username" value="root"/>
    <property name="password" value="root"/>
</bean>


<!-- <bean name="personaDAO" class="ar.com.sgt.dao.PersonaDAO"> -->
<!-- </bean> -->

<!-- Hibernate 3 Annotation SessionFactory Bean definition-->
    <bean id="hibernate3AnnotatedSessionFactory"
        class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="annotatedClasses">
            <list>
                <value>ar.com.sgt.dominio.Persona</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
            
  				<prop key="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</prop>
  				<prop key="hibernate.connection.url">jdbc:oracle:thin:@127.0.0.1:1521:MKYONG</prop>
  				<prop key="hibernate.connection.username">mkyong</prop>
  				<prop key="hibernate.connection.password">password</prop>
  				<prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
  				<prop key="hibernate.default_schema">MKYONG</prop>
<!--                 <prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop> -->
<!--                 <prop key="hibernate.current_session_context_class">thread</prop> -->
<!--                 <prop key="hibernate.show_sql">true</prop> -->
<!--                 <prop key="hibernate.hbm2ddl.auto">create</prop> -->
            </props>
        </property>
    </bean>
     
    <bean id="personaDAO" class="ar.com.sgt.dao.PersonaDAO">
        <property name="sessionFactory" ref="hibernate3AnnotatedSessionFactory" />
    </bean>

 
</beans>