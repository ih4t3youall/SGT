<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.0.3.xsd">

	<http auto-config="true">
	   <intercept-url pattern="/empleado/*" access="ROLE_USER,ROLE_ADMIN" />  
		<intercept-url pattern="/*" access="ROLE_ANONYMOUS,ROLE_USER,ROLE_ADMIN" />
		
		
		<form-login login-page="/loginEmpleado.htm" default-target-url="/empleado/welcome.htm"
			authentication-failure-url="/loginFailEmpleado.htm" 
			/>
        <logout logout-success-url="/" logout-url="/j_spring_security_logout" />
	</http>

	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource"
				
				users-by-username-query="select username,password, 1 as enabled  
					from USER_EMPL where USERNAME=?"
					
					
					authorities-by-username-query="
 					select u.username, ur.authority from USER_EMPL u, USER_ROLES ur  
 					where u.user_id = ur.user_id and u.username =?"  
/>

<!-- 					select username,password, enabled  -->
<!-- 					from users where USERNAME=?" -->

					
				
<!-- 				authorities-by-username-query=" -->
<!-- 					select u.username, ur.authority from users u, user_roles ur  -->
<!-- 					where u.user_id = ur.user_id and u.username =?"  -->
					
		
		</authentication-provider>
	</authentication-manager>

</beans:beans>